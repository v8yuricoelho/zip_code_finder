<div class="flex justify-center items-center h-screen">
  <div class="p-10 rounded shadow-lg">
    <h1 class="text-center text-2xl font-bold leading-relaxed tracking-tight">ZipCode Finder</h1>
    <%= form_tag zip_code_path, method: :get do %>
      <div>
        <%= text_field_tag :zip_code, nil, class: 'block rounded-md border-1 py-1.5 shadow-sm' %>
      </div>
      <div class="text-center mt-4">
        <%= submit_tag 'Buscar', class: 'px-4 py-2 bg-blue-600 rounded-md text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600' %>
      </div>
    <% end %>

    <% if @zip_code_result.present? %>
      <% if @zip_code_result['error_message'] %>
        <%= render 'zip_code_error', zip_code_result: @zip_code_result %>
      <% else %>
        <%= render 'zip_code_details', zip_code_result: @zip_code_result %>
      <% end %>
    <% end %>

    <%= render 'zip_code_top_searched' %>
  </div>
</div>
